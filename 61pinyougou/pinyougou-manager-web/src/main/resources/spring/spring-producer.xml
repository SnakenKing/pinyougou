<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--配置生产者-->
    <bean class="org.apache.rocketmq.client.producer.DefaultMQProducer" id="producer" init-method="start" destroy-method="shutdown">
        <property name="producerGroup" value="producer_manager_web_group"></property>
        <property name="namesrvAddr" value="127.0.0.1:9876"></property>
    </bean>
</beans>